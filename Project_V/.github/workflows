name: Run JMeter 5.6.3 Tests with Java 24

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  jmeter-test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v3

    - name: Set up Java 24
      uses: actions/setup-java@v3
      with:
        distribution: 'temurin'   # Adoptium's Java builds
        java-version: '24'

    - name: Download JMeter 5.6.3
      run: |
        curl -O https://downloads.apache.org/jmeter/binaries/apache-jmeter-5.6.3.tgz
        tar -xzf apache-jmeter-5.6.3.tgz
        echo "JMETER_HOME=$PWD/apache-jmeter-5.6.3" >> $GITHUB_ENV

    - name: Verify Java Version
      run: java -version

    - name: Run JMeter Test Plan
      run: |
        $JMETER_HOME/bin/jmeter -n -t test-plan.jmx -l results.jtl -e -o report

    - name: Upload Test Artifacts
      uses: actions/upload-artifact@v3
      with:
        name: jmeter-results
        path: |
          results.jtl
          report

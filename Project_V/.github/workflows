name: JMeter Always-Report Test

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  jmeter-test:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Java 24
      uses: actions/setup-java@v3
      with:
        distribution: 'temurin'
        java-version: '24'

    - name: Download Apache JMeter 5.6.3
      run: |
        curl -O https://downloads.apache.org/jmeter/binaries/apache-jmeter-5.6.3.tgz
        tar -xzf apache-jmeter-5.6.3.tgz
        echo "JMETER_HOME=$PWD/apache-jmeter-5.6.3" >> $GITHUB_ENV

    - name: Run JMeter Test Plan (never stop workflow)
      id: run-jmeter
      run: |
        mkdir -p report
        set +e  # Don't fail this step on error
        $JMETER_HOME/bin/jmeter -n -t projectV_tasking.jmx -l results.jtl
        echo "exit_code=$?" >> $GITHUB_OUTPUT

    - name: Generate HTML Report (even if test failed)
      if: always()
      run: |
        $JMETER_HOME/bin/jmeter -g results.jtl -o report || echo "Report generation failed"

    - name: Upload Report Artifact (always)
      if: always()
      uses: actions/upload-artifact@v3
      with:
        name: jmeter-report
        path: |
          results.jtl
          report/
